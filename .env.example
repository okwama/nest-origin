# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Database Configuration
# Set to 'true' for local SQLite development, 'false' for MySQL production
USE_LOCAL_DB=true

# MySQL Configuration (only used when USE_LOCAL_DB=false)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=citlogis_ws

# Alternative: Use DATABASE_URL instead of individual parameters
# DATABASE_URL=mysql://username:password@host:port/database

# Database Options
DB_SYNC=false
DB_LOGGING=false
DB_SSL=false
